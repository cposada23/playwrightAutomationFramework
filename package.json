{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "private": true,
  "description": "Modular Playwright + TypeScript test automation framework",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist reports playwright-report",
    "test": "ENV=dev playwright test",
    "test:db": "ENV=dev playwright test --grep @db --project=Chromium",
    "test:graphql": "ENV=dev playwright test --grep @graphql --project=Chromium",
    "test:rest": "ENV=dev playwright test --grep @rest --project=Chromium",
    "test:smoke": "ENV=dev playwright test --grep @smoke --project=Chromium",
    "test:smoke:headed": "ENV=dev playwright test --grep @smoke --headed --project=Chromium",
    "test:functional": "ENV=dev playwright test --grep @functional",
    "test:regression": "ENV=dev playwright test --grep @regression",
    "test:staging": "ENV=staging playwright test",
    "test:prod": "ENV=prod playwright test",
    "report": "npx playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/archiver": "^6.0.3",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@slack/web-api": "^7.10.0",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.4",
    "mongodb": "^6.18.0",
    "pg": "^8.16.3",
    "pino": "^9.8.0",
    "pino-pretty": "^11.3.0"
  }
}
